  end;

var
  Loja: TLoja;

implementation

{$R *.fmx}

procedure TLoja.boxClick(Sender: TObject);
var
  ValorAtual: Integer;
begin
  ValorAtual := StrToInt(Numberbox.Text);
  Inc(ValorAtual);
  Numberbox.Text := IntToStr(ValorAtual);
end;

